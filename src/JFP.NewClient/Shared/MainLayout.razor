@using Blazored.Toast.Configuration

@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<BlazoredToasts Position="ToastPosition.BottomRight" />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleDrawer" />
        <MudText Typo="Typo.h6">
            Joensuu Feedback Platform
        </MudText>
    </MudAppBar>

    <MudDrawer @bind-Open="@_open">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">
                Navigation
            </MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Href="/" Icon="@Icons.Material.Filled.Feedback">
                Feedback
            </MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

